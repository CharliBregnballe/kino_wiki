<%= form_with model: @incident do |f| %>
  
  <div class="form-group">
    <%= f.label :title, "Titel" %>
    <%= f.text_field :title, id: :incident_title, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Beskrivelse" %>
    <%= f.text_area :description, id: :incident_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :solution, "LÃ¸sning" %>
    <%= f.text_area :solution, id: :incident_solution, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status %><br>
    <% Incident.statuses.keys.each do |status| %>
      <%= f.radio_button :status, status %>
      <%= f.label "#{:status}_#{status.parameterize.underscore}", status %><br>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
  
<% end %>
