<%= form_with model: @incident do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, id: :incident_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, id: :incident_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :solution %>
    <%= f.text_field :solution, id: :incident_solution, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status %><br>
    <% Incident.statuses.keys.each do |status| %>
      <%= f.radio_button :status, status %>
      <%= f.label "#{:status}_#{status.parameterize.underscore}", status %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
