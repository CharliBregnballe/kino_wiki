<%= form_tag(articles_path, method: "get") do %>
  <%= text_field_tag :search, nil, placeholder: "Search articles", class: "form-control mr-sm-2" %>
  <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
<% end %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="w-20 p-3">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= article.department.title %></h6>
          <p class="card-text"><%= truncate("article.body.html_safe", length: 50) %></p>
          <%= link_to "Show", article_path(article), class: "card-link" %>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
