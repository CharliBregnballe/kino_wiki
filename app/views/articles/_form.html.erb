<%= form_with model: @article do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, id: :article_title, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.cktext_area :body, id: :article_body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :department_id %>
    <%= f.collection_select(:department_id, Department.all, :id, :title, { :prompt => "Select a department" }, { id: 'department_dropdown', class: 'form-control' }) %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
